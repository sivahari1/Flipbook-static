# FlipBook DRM - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# AWS Cognito Configuration
NEXT_PUBLIC_AWS_REGION=ap-south-1
NEXT_PUBLIC_AWS_USER_POOL_ID=your_user_pool_id_here
NEXT_PUBLIC_AWS_USER_POOL_WEB_CLIENT_ID=your_client_id_here
AWS_COGNITO_CLIENT_SECRET=your_client_secret_here

# Razorpay Payment Configuration
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Database Configuration
DATABASE_URL=your_production_database_url_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-production-domain.com

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn_here

# Optional: Email Configuration (if using custom email service)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here